<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Contacts</title>
  
  <style>
    body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif; margin: 0; background-color: #f4f7f6; }
    .container { max-width: 1400px; margin: 0 auto; padding: 30px; }
    h1, h2 { color: #333; }
    a { color: #007bff; text-decoration: none; }
    a:hover { text-decoration: underline; }
    
    /* Nav */
    .breadcrumb { margin-bottom: 20px; font-size: 1.1em; }
    .breadcrumb a { color: #007bff; }
    
    /* Alert Box Styling */
    .alert { padding: 15px; margin-bottom: 20px; border-radius: 5px; font-weight: 500; }
    .alert-success { background-color: #d1e7dd; color: #0f5132; border: 1px solid #badbcc; }
    .alert-error { background-color: #f8d7da; color: #842029; border: 1px solid #f5c2c7; }

    /* Form Section */
    .management-section {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 30px;
      margin-bottom: 30px;
    }
    .widget { background: #fff; border-radius: 8px; padding: 25px; box-shadow: 0 4px 10px rgba(0,0,0,0.05); }
    .widget h2 { margin-top: 0; }
    
    form div { margin-bottom: 20px; }
    label { display: block; margin-bottom: 8px; font-weight: 600; color: #333; }
    input[type="file"], input[type="text"], input[type="tel"], select {
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      box-sizing: border-box; 
    }
    button { 
      padding: 12px 20px; 
      text-decoration: none; 
      color: white; 
      border-radius: 5px; 
      border: none;
      font-size: 1em;
      cursor: pointer;
    }
    .btn-green { background-color: #28a745; }
    .btn-green:hover { background-color: #218838; }
    .btn-grey { background-color: #6c757d; }
    .btn-grey:hover { background-color: #5a6268; }
    .btn-blue { background-color: #007bff; }
    .btn-blue:hover { background-color: #0056b3; }

    /* Filter Form */
    .filter-form {
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      margin-bottom: 20px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.05);
      display: grid;
      grid-template-columns: 1fr 1fr 2fr 1fr; /* 4 columns */
      gap: 20px;
      align-items: flex-end;
    }
    .filter-group { flex-grow: 1; }
    .filter-group label { margin-bottom: 5px; font-size: 0.9em; }

    /* Table Styling */
    .table-widget { background: #fff; border-radius: 8px; box-shadow: 0 4px 10px rgba(0,0,0,0.05); overflow-x: auto; }
    table { width: 100%; border-collapse: collapse; }
    th, td { padding: 12px 15px; text-align: left; border-bottom: 1px solid #ddd; white-space: nowrap; }
    th { background-color: #f4f7f6; }
    tr:last-child td { border-bottom: none; }
    .btn-view {
      background-color: #007bff;
      color: white;
      padding: 5px 10px;
      border-radius: 4px;
      font-size: 0.9em;
      font-weight: 500;
    }
    .btn-view:hover { background-color: #0056b3; }

    @media (max-width: 900px) {
      .management-section { grid-template-columns: 1fr; }
      .filter-form { grid-template-columns: 1fr 1fr; }
    }
    @media (max-width: 600px) {
      .filter-form { grid-template-columns: 1fr; }
    }
  </style>
</head>
<body>

  <div class="container">
    <div class="breadcrumb">
      <a href="/">&larr; Back to Dashboard</a>
    </div>
    <h1>Manage Contacts</h1>

    <% if (success_msg && success_msg.length > 0) { %>
      <div class="alert alert-success"><%= success_msg %></div>
    <% } %>
    <% if (error_msg && error_msg.length > 0) { %>
      <div class="alert alert-error"><%= error_msg %></div>
    <% } %>

    <div class="management-section">
      <div class="widget">
        <h2>Import Contacts (CSV)</h2>
        <form action="/contacts/import" method="POST" enctype="multipart/form-data">
          <div>
            <label for="companyId-csv">Select Company:</label>
            <select name="companyId" id="companyId-csv" required>
              <option value="">-- Please Select --</option>
              <% companies.forEach(function(company) { %>
                <option value="<%= company._id %>"><%= company.name %></option>
              <% }); %>
            </select>
          </div>
          <div>
            <label for="segmentId-csv">Add to Segment:</label>
            <select name="segmentId" id="segmentId-csv" required>
              <option value="">-- Please Select --</option>
              <% segments.forEach(function(segment) { %>
                <option value="<%= segment._id %>"><%= segment.name %></option>
              <% }); %>
            </select>
          </div>
          <div>
            <label for="csvFile">Upload CSV File:</label>
            <input type="file" name="csvFile" id="csvFile" accept=".csv" required>
          </div>
          <button type="submit" class="btn-green">Import Contacts</button>
        </form>
      </div>

      <div class="widget">
        <h2>Export Contacts</h2>
        <form action="/contacts/export" method="GET">
          <div>
            <label for="companyId-export">Select Company:</label>
            <select name="companyId" id="companyId-export" required>
              <option value="">-- Please Select --</option>
              <% companies.forEach(function(company) { %>
                <option value="<%= company._id %>"><%= company.name %></option>
              <% }); %>
            </select>
          </div>
          <div>
            <label for="segmentId-export">Select Segment:</label>
            <select name="segmentId" id="segmentId-export" required>
              <option value="">-- Please Select --</option>
              <% segments.forEach(function(segment) { %>
                <option value="<%= segment._id %>"><%= segment.name %></option>
              <% }); %>
            </select>
          </div>
          <button type="submit" class="btn-grey">Export Contacts</button>
        </form>
      </div>
    </div>

    <h2>Contact List</h2>

    <form action="/contacts" method="GET" class="filter-form">
      <div class="filter-group">
        <label for="companyId-filter">Filter by Company:</label>
        <select name="companyId" id="companyId-filter">
          <option value="">All Companies</option>
          <% companies.forEach(function(company) { %>
            <option value="<%= company._id %>" <%= selectedCompany == company._id ? 'selected' : '' %>>
              <%= company.name %>
            </option>
          <% }); %>
        </select>
      </div>
      <div class="filter-group">
        <label for="segmentId-filter">Filter by Segment:</label>
        <select name="segmentId" id="segmentId-filter">
          <option value="">All Segments</option>
          <% segments.forEach(function(segment) { %>
            <option value="<%= segment._id %>" <%= selectedSegment == segment._id ? 'selected' : '' %>>
              <%= segment.name %>
            </option>
          <% }); %>
        </select>
      </div>
      <div class="filter-group">
        <label for="search">Search by Name, Phone, or Email:</label>
        <input type="text" name="search" id="search" placeholder="Enter search term..." value="<%= searchTerm || '' %>">
      </div>
      <button type="submit" class="btn-blue">Search / Filter</button>
    </form>
    <div class="table-widget">
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Phone</th>
            <th>Company Name</th>
            <th>Email</th>
            <th>City</th>
            <th>Lead Status</th>
            <th>Segments</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% contacts.forEach(function(contact) { %>
            <tr>
              <td><%= contact.name %></td>
              <td><%= contact.phone %></td>
              <td><%= contact.companyName || 'N/A' %></td>
              <td><%= contact.email || 'N/A' %></td>
              <td><%= contact.city || 'N/A' %></td>
              <td><%= contact.leadStatus || 'N/A' %></td>
              <td>
                <%= contact.segments.map(seg => seg.name).join(', ') %>
              </td>
              <td>
                <a href="/contacts/view/<%= contact._id %>" class="btn-view">View/Edit</a>
              </td>
            </tr>
          <% }); %>

          <% if (contacts.length === 0) { %>
            <tr>
              <td colspan="8" style="text-align: center;">No contacts found matching your filters.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

</body>
</html>