<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Contacts</title>
  
  <style>
    body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif; margin: 40px; background-color: #f4f7f6; }
    form { background: #fff; border-radius: 8px; padding: 25px; max-width: 500px; box-shadow: 0 4px 10px rgba(0,0,0,0.05); }
    div { margin-bottom: 20px; }
    label { display: block; margin-bottom: 8px; font-weight: 600; color: #333; }
    input[type="file"], select {
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      box-sizing: border-box; /* Important */
    }
    button { 
      padding: 12px 20px; 
      text-decoration: none; 
      background-color: #28a745; 
      color: white; 
      border-radius: 5px; 
      border: none;
      font-size: 1em;
      cursor: pointer;
    }
    button:hover { background-color: #218838; }
    a { color: #007bff; }
  </style>
</head>
<body>

  <h1>Manage Contacts</h1>
  <p><a href="/">&larr; Back to Dashboard</a></p>

  <form action="/contacts/import" method="POST" enctype="multipart/form-data">
    
    <div>
      <label for="companyId">Select Company:</label>
      <select name="companyId" id="companyId" required>
        <option value="">-- Please Select --</option>
        <% companies.forEach(function(company) { %>
          <option value="<%= company._id %>"><%= company.name %></option>
        <% }); %>
      </select>
    </div>

    <div>
      <label for="segmentId">Add to Segment:</label>
      <select name="segmentId" id="segmentId" required>
        <option value="">-- Please Select --</option>
        <% segments.forEach(function(segment) { %>
          <option value="<%= segment._id %>"><%= segment.name %></option>
        <% }); %>
      </select>
    </div>

    <div>
      <label for="csvFile">Upload CSV File:</label>
      <input type="file" name="csvFile" id="csvFile" accept=".csv" required>
    </div>
    
    <button type="submit">Import Contacts</button>
  </form>

</body>
</html>