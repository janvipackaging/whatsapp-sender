<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Contacts</title>
  
  <style>
    body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif; margin: 40px; background-color: #f4f7f6; }
    h1, h2 { color: #333; }
    a { color: #007bff; text-decoration: none; }
    a:hover { text-decoration: underline; }

    /* --- NEW --- Alert Box Styling */
    .alert {
      padding: 15px;
      margin-bottom: 20px;
      border-radius: 5px;
      font-weight: 500;
      max-width: 500px; /* Match form width */
    }
    .alert-success {
      background-color: #d1e7dd;
      color: #0f5132;
      border: 1px solid #badbcc;
    }
    .alert-error {
      background-color: #f8d7da;
      color: #842029;
      border: 1px solid #f5c2c7;
    }
    /* --- END NEW --- */

    /* Form Styling */
    form { background: #fff; border-radius: 8px; padding: 25px; max-width: 500px; box-shadow: 0 4px 10px rgba(0,0,0,0.05); margin-bottom: 30px; }
    div { margin-bottom: 20px; }
    label { display: block; margin-bottom: 8px; font-weight: 600; color: #333; }
    input[type="file"], input[type="text"], input[type="tel"], select {
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      box-sizing: border-box; /* Important */
    }
    button { 
      padding: 12px 20px; 
      text-decoration: none; 
      color: white; 
      border-radius: 5px; 
      border: none;
      font-size: 1em;
      cursor: pointer;
    }
    .btn-green { background-color: #28a745; }
    .btn-green:hover { background-color: #218838; }
    .btn-grey { background-color: #6c757d; }
    .btn-grey:hover { background-color: #5a6268; }
  </style>
</head>
<body>

  <h1>Manage Contacts</h1>
  <p><a href="/">&larr; Back to Dashboard</a></p>

  <% if (success_msg && success_msg.length > 0) { %>
    <div class="alert alert-success">
      <%= success_msg %>
    </div>
  <% } %>
  <% if (error_msg && error_msg.length > 0) { %>
    <div class="alert alert-error">
      <%= error_msg %>
    </div>
  <% } %>
  <h2>Import Contacts (CSV)</h2>
  <form action="/contacts/import" method="POST" enctype="multipart/form-data">
    <div>
      <label for="companyId-csv">Select Company:</label>
      <select name="companyId" id="companyId-csv" required>
        <option value="">-- Please Select --</option>
        <% companies.forEach(function(company) { %>
          <option value="<%= company._id %>"><%= company.name %></option>
        <% }); %>
      </select>
    </div>
    <div>
      <label for="segmentId-csv">Add to Segment:</label>
      <select name="segmentId" id="segmentId-csv" required>
        <option value="">-- Please Select --</option>
        <% segments.forEach(function(segment) { %>
          <option value="<%= segment._id %>"><%= segment.name %></option>
        <% }); %>
      </select>
    </div>
    <div>
      <label for="csvFile">Upload CSV File:</label>
      <input type="file" name="csvFile" id="csvFile" accept=".csv" required>
    </div>
    <button type="submit" class="btn-green">Import Contacts</button>
  </form>

  <h2>Export Contacts</h2>
  <form action="/contacts/export" method="GET">
    <div>
      <label for="companyId-export">Select Company:</label>
      <select name="companyId" id="companyId-export" required>
        <option value="">-- Please Select --</option>
        <% companies.forEach(function(company) { %>
          <option value="<%= company._id %>"><%= company.name %></option>
        <% }); %>
      </select>
    </div>
    <div>
      <label for="segmentId-export">Select Segment:</label>
      <select name="segmentId" id="segmentId-export" required>
        <option value="">-- Please Select --</option>
        <% segments.forEach(function(segment) { %>
          <option value="<%= segment._id %>"><%= segment.name %></option>
        <% }); %>
      </select>
    </div>
    <button type="submit" class="btn-grey">Export Contacts</button>
  </form>

</body>
</html>