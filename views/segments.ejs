<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Segments</title>
  
  <style>
    body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif; margin: 40px; background-color: #f4f7f6; }
    h1, h2 { color: #333; }
    a { color: #007bff; text-decoration: none; }
    a:hover { text-decoration: underline; }
    
    /* Alert Box Styling */
    .alert { padding: 15px; margin-bottom: 20px; border-radius: 5px; font-weight: 500; max-width: 500px; }
    .alert-success { background-color: #d1e7dd; color: #0f5132; border: 1px solid #badbcc; }
    .alert-error { background-color: #f8d7da; color: #842029; border: 1px solid #f5c2c7; }

    /* Form Styling */
    form { background: #fff; border-radius: 8px; padding: 25px; max-width: 500px; box-shadow: 0 4px 10px rgba(0,0,0,0.05); margin-bottom: 30px; }
    div { margin-bottom: 20px; }
    label { display: block; margin-bottom: 8px; font-weight: 600; color: #333; }
    input[type="text"], select {
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      box-sizing: border-box; 
    }
    button { 
      padding: 12px 20px; 
      background-color: #007bff; 
      color: white; 
      border-radius: 5px; 
      border: none;
      font-size: 1em;
      cursor: pointer;
    }
    button:hover { background-color: #0056b3; }

    /* Table Styling */
    table { width: 100%; border-collapse: collapse; background: #fff; box-shadow: 0 4px 10px rgba(0,0,0,0.05); border-radius: 8px; max-width: 500px; }
    th, td { padding: 12px 15px; text-align: left; border-bottom: 1px solid #ddd; }
    th { background-color: #f4f7f6; }
    tr:last-child td { border-bottom: none; }
    .btn-delete {
      background-color: #dc3545;
      color: white;
      padding: 5px 10px;
      border-radius: 4px;
      text-decoration: none;
      font-size: 0.9em;
      font-weight: 500;
    }
    .btn-delete:hover { background-color: #c82333; }
  </style>
</head>
<body>

  <h1>Manage Segments</h1>
  <p><a href="/">&larr; Back to Dashboard</a></p>

  <% if (success_msg && success_msg.length > 0) { %>
    <div class="alert alert-success"><%= success_msg %></div>
  <% } %>
  <% if (error_msg && error_msg.length > 0) { %>
    <div class="alert alert-error"><%= error_msg %></div>
  <% } %>

  <h2>Create New Segment</h2>
  <form action="/segments/add" method="POST">
    <div>
      <label for="name">Segment Name:</label>
      <input type="text" name="name" id="name" placeholder="e.g., Mumbai Leads" required>
    </div>
    
    <div>
      <label for="companyId">Company:</label>
      <select name="companyId" id="companyId" required>
        <option value="">-- Select Company --</option>
        <% companies.forEach(function(company) { %>
          <option value="<%= company._id %>"><%= company.name %></option>
        <% }); %>
      </select>
    </div>
    
    <button type="submit">Save Segment</button>
  </form>

  <h2>Saved Segments</h2>
  <table>
    <thead>
      <tr>
        <th>Segment Name</th>
        <th>Company</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% segments.forEach(function(segment) { %>
        <tr>
          <td><%= segment.name %></td>
          <td><%= segment.company ? segment.company.name : 'N/A' %></td>
          <td>
            <a href="/segments/delete/<%= segment._id %>" class="btn-delete" onclick="return confirm('Are you sure you want to delete this segment? This will remove it from all contacts.');">Delete</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

</body>
</html>