<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Campaign Reports</title>
  
  <style>
    body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif; margin: 40px; background-color: #f4f7f6; }
    h1 { color: #333; }
    a { color: #007bff; text-decoration: none; }
    a:hover { text-decoration: underline; }

    /* Table Styling */
    table { width: 100%; border-collapse: collapse; background: #fff; box-shadow: 0 4px 10px rgba(0,0,0,0.05); border-radius: 8px; margin-top: 20px; }
    th, td { padding: 12px 15px; text-align: left; border-bottom: 1px solid #ddd; }
    th { background-color: #f4f7f6; }
    tr:last-child td { border-bottom: none; }
    
    /* Status Styling */
    .status { padding: 5px 8px; border-radius: 5px; font-weight: 600; font-size: 0.85em; }
    .status-sending { background-color: #fff3cd; color: #664d03; }
    .status-completed { background-color: #d1e7dd; color: #0f5132; }
    .rate { font-weight: 700; color: #1e7e34; }
  </style>
</head>
<body>

  <h1>Campaign Reports</h1>
  <p><a href="/">&larr; Back to Dashboard</a></p>

  <table>
    <thead>
      <tr>
        <th>Campaign Name</th>
        <th>Company</th>
        <th>Segment</th>
        <th>Date Sent</th>
        <th>Status</th>
        <th>Total Sent</th>
        <th>Delivered</th>
        <th>Read</th>
        <th>Read Rate %</th> </tr>
    </thead>
    <tbody>
      <% campaigns.forEach(function(campaign) { 
        // Calculate Read Rate %
        let readRate = 0;
        if (campaign.deliveredCount > 0) {
          readRate = ((campaign.readCount / campaign.deliveredCount) * 100).toFixed(1);
        }
      %>
        <tr>
          <td><%= campaign.name %></td>
          <td><%= campaign.company ? campaign.company.name : 'N/A' %></td>
          <td><%= campaign.segment ? campaign.segment.name : 'N/A' %></td>
          <td><%= new Date(campaign.createdAt).toLocaleDateString() %></td>
          <td>
            <span class="status status-<%= campaign.status.toLowerCase() %>">
              <%= campaign.status %>
            </span>
          </td>
          <td><%= campaign.totalSent %></td>
          <td><%= campaign.deliveredCount %></td>
          <td><%= campaign.readCount %></td> <td>
            <span class="rate"><%= readRate %>%</span>
          </td> </tr>
      <% }); %>
    </tbody>
  </table>

</body>
</html>